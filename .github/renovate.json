{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "commitMessageAction": null,
      "commitMessageExtra": null,
      "groupName": "dependency !major update(s)",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "commitMessageAction": null,
      "commitMessageExtra": "{{depName}} {{currentVersion}} \u2192 {{newVersion}}",
      "commitMessageTopic": "dependency major update:",
      "matchUpdateTypes": [
        "major"
      ]
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
